@model IEnumerable<Cliente_Seguridad.ServicioSeguridad.Lista>
@{
    ViewBag.Title = "Index";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Listas</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Inicio")">Inicio</a>
            </li>
            <li class="active">
                <strong>Listas</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listas</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                @if (ViewBag.PermisoEliminacion == "TPELIM")
                                {
                                    <th>Eliminar</th>
                                }
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                foreach (Cliente_Seguridad.ServicioSeguridad.Lista lista in Model)
                                {
                                    <tr>
                                        <td>@lista.IdLista</td>
                                        <td><a href="@Url.Action("ListaModificar","Lista", new { idLista = lista.IdLista })">@lista.NombreLista</a></td>
                                        <td>@lista.DescripcionLista</td>
                                        @if (ViewBag.PermisoEliminacion == "TPELIM")
                                        {
                                            <td>
                                                <a class="demo3" id="@lista.IdLista" href="#" onclick="eliminaObjeto('@Url.Action("ListaEliminarJson", "Lista", new {idLista = lista.IdLista})');"><span class="fa fa-trash"></span></a>
                                            </td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm" onclick="ListasExportar();"><i class="fa fa-file-excel-o"></i>&nbsp;Exportar a Excel</button>
                    </div>
                    @if (ViewBag.PermisoCreacion == "TPCREA")
                    {
                        <div class="btn-group">
                            <a href="@Url.Action("ListaRegistrar")" class="btn btn-default btn-sm" lista="button"><i class="fa fa-file-o"></i>&nbsp;Nuevo</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

