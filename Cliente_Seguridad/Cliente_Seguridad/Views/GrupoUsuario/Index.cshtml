@model IEnumerable<Cliente_Seguridad.ServicioSeguridad.GrupoUsuario>
@{
    ViewBag.Title = "Index";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Datos del Grupo Usuarios</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Id Grupo Usuario</th>
                                <th>Grupo</th>
                                <th>Usuario</th>
                                <th>Estado Grupo Usuario</th>
                                <th>Creado El</th>
                                <th>Modificado El</th>
                                @if (ViewBag.PermisoEliminacion == "TPELIM")
                                {
                                    <th>Eliminar</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (Cliente_Seguridad.ServicioSeguridad.GrupoUsuario grupoUsuario in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("GrupoUsuarioModificar","GrupoUsuario", new { idGrupoUsuario = grupoUsuario.IdGrupoUsuario })">@grupoUsuario.IdGrupoUsuario</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("GrupoUsuarioModificar","GrupoUsuario", new { idGrupoUsuario = grupoUsuario.IdGrupoUsuario })">@grupoUsuario.NombreGrupo</a>
                                        </td>
                                        <td>
                                            @grupoUsuario.Usuario
                                        </td>
                                        <td>
                                            @grupoUsuario.EstadoGrupoUsuarioDesc
                                        </td>
                                        @*@if (ViewBag.PermisoEliminar.ToString().Substring(0, 3) == "POT")
                                            {*@
                                        <td>
                                            @grupoUsuario.FechaCreacion Por @grupoUsuario.CreadoPor
                                        </td>
                                        @if (grupoUsuario.FechaModificacion != DateTime.MinValue)
                                        {
                                            <td>
                                                @grupoUsuario.FechaModificacion Por @grupoUsuario.ModificadoPor
                                            </td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                        @if (ViewBag.PermisoEliminacion == "TPELIM")
                                        {
                                            <td>
                                                <a class="demo3" id="@grupoUsuario.IdGrupoUsuario" href="#" onclick="eliminaObjeto('@Url.Action("GrupoUsuarioEliminarJson", "GrupoUsuario", new {idGrupoUsuario = grupoUsuario.IdGrupoUsuario, usuario = grupoUsuario.Usuario})');"><span class="fa fa-trash"></span></a>
                                            </td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="btn-group">
                        @*<button type="button" class="btn btn-primary btn-sm " onclick="RolesExportar('@ViewBag.IdRol', '@ViewBag.NombreRol', '@ViewBag.IdAplicacion');"><i class="fa fa-file-excel-o"></i>&nbsp;Exportar a Excel</button>*@
                        <button type="button" class="btn btn-primary btn-sm " onclick=""><i class="fa fa-file-excel-o"></i>&nbsp;Exportar a Excel</button>
                    </div>
                    @if (ViewBag.PermisoCreacion == "TPCREA")
                    {
                        <div class="btn-group">
                            <a href="@Url.Action("GrupoUsuarioRegistrar","GrupoUsuario", new { usuario = ViewBag.Usuario})" class="btn btn-default btn-sm" role="button"><i class="fa fa-file-o"></i>&nbsp;Nuevo</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

