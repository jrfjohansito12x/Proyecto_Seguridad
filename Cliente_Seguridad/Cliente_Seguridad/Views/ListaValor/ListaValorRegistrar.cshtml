@model Cliente_Seguridad.ServicioSeguridad.ListaValor
@{
    ViewBag.Title = "ListaValorRegistrar";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm("ListaValorRegistrar", "ListaValor", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Id De Lista (*)</label>
                            <div class="col-lg-10">
                                <input type="text" disabled class="form-control" value="@ViewBag.IdLista" />
                                <input type="hidden" id="idLista" name="idLista" value="@ViewBag.IdLista" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Valor De Lista Valor (*)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", @placeholder = "Valor De La Lista Valor" })
                                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Descripción de la Lista Valor (*)</label>
                            <div class="col-lg-10">
                                @Html.TextAreaFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control", @placeholder = "Descripción De La Lista Valor", @rows = "3", @maxlength = "500" })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i>&nbsp;Grabar</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

