@model IEnumerable<Cliente_Seguridad.ServicioSeguridad.Rol>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Lista de Roles</h5>
            </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            @if (ViewBag.PermisoEliminacion == "TPELIM")
                            {
                                <th>Eliminar</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (Cliente_Seguridad.ServicioSeguridad.Rol rol in Model)
                            {
                                <tr>
                                    <td>
                                        @rol.IdRol
                                    </td>
                                    <td>
                                        <a href="@Url.Action("RolesModificar","Roles", new { idRol = rol.IdRol })">@rol.NombreRol</a>
                                    </td>
                                    <td>
                                        estado del rol
                                        @rol.EstadoRolDesc
                                    </td>
                                    @if (ViewBag.PermisoEliminacion == "TPELIM")
                                    {
                                        <td>
                                            <a class="demo3" id="@rol.IdRol" href="#" onclick="eliminaObjeto('@Url.Action("RolEliminarJson", "Roles", new {idRol = rol.IdRol})');"><span class="fa fa-trash"></span></a>

                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="btn-group">
                    @*<button type="button" class="btn btn-primary btn-sm " onclick="RolesExportar('@ViewBag.IdRol', '@ViewBag.NombreRol', '@ViewBag.IdAplicacion');"><i class="fa fa-file-excel-o"></i>&nbsp;Exportar a Excel</button>*@
                    <button type="button" class="btn btn-primary btn-sm " onclick=""><i class="fa fa-file-excel-o"></i>&nbsp;Exportar a Excel</button>
                </div>
                @if (ViewBag.PermisoCreacion == "TPCREA")
                {
                    <div class="btn-group">
                        <a href="@Url.Action("RolesCrear","Roles")" class="btn btn-default btn-sm" role="button"><i class="fa fa-file-o"></i>&nbsp;Nuevo</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

