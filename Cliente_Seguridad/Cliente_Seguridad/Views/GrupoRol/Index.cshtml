@model IEnumerable<Cliente_Seguridad.ServicioSeguridad.GrupoRol>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                        <tr>
                            <th>Id Rol</th>
                            <th>Nombre Rol</th>
                            <th>Estado</th>
                            @if (ViewBag.PermisoEliminacion == "TPELIM")
                            {
                                <th>Eliminar</th>
                            }
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            foreach (Cliente_Seguridad.ServicioSeguridad.GrupoRol grupoRol in Model)
                            {
                                <tr>
                                    <td>
                                        @grupoRol.IdRol
                                    </td>
                                    <td>
                                        <a href="@Url.Action("GrupoRolModificar", "GrupoRol", new { idGrupoRol = grupoRol.IdGrupoRol })">@grupoRol.NombreRol</a>
                                    </td>
                                    <td>
                                        @grupoRol.EstadoGrupoRolDesc
                                    </td>
                                    @if (ViewBag.PermisoEliminacion == "TPELIM")
                                    {
                                        <td>
                                            <a class="demo3" id="@grupoRol.IdGrupo" href="#" onclick="eliminaObjeto('@Url.Action("GrupoRolEliminarJson", "GrupoRol", new { idGrupoRol = grupoRol.IdGrupoRol, idGrupo = grupoRol.IdGrupo })');"><span class="fa fa-trash"></span></a>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary btn-sm" onclick="ExportarRolPorGrupo();"><i class="fa fa-file-excel-o"></i>&nbsp;Exportar a Excel</button>
                </div>
                @if (ViewBag.PermisoCreacion == "TPCREA")
                {
                    <div class="btn-group">
                        <a href="@Url.Action("GrupoRolCrear", "GrupoRol", new { idGrupo = ViewBag.IdGrupo })" class="btn btn-default btn-sm" role="button"><i class="fa fa-file-o"></i>&nbsp;Nuevo</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

