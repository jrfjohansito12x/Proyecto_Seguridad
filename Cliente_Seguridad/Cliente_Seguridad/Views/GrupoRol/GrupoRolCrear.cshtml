@model Cliente_Seguridad.ServicioSeguridad.GrupoRol
@{
    ViewBag.Title = "GrupoRolCrear";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm("GrupoRolCrear", "GrupoRol", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Id Grupo (*)</label>
                            <div class="col-lg-10">
                                <input type="text" disabled class = "form-control" value="@ViewBag.IdGrupo" />
                                <input type="hidden" id="idGrupo" name="idGrupo" value="@ViewBag.IdGrupo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Rol (*)</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.IdRol, new SelectList(ViewBag.ListaRol, "Value", "Text"), "- Seleccionar -", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdRol, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Estado del Grupo Rol (*)</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.EstadoGrupoRol, new SelectList(ViewBag.ListaEstadoGrupoRol, "Value", "Text"), "- Seleccionar -", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EstadoGrupoRol, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary btn-sm "><i class="fa fa-save"></i>&nbsp;Grabar</button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-sm-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

