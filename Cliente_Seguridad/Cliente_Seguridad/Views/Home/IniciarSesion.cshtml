                                @Html.PasswordFor(modelo => modelo.ClaveAcceso, new { @class = "form-control", @id = "Usuario", @placeholder = "Clave del Usuario" })
                                @Html.ValidationMessageFor(modelo => modelo.ClaveAcceso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <br />
                        <button type="submit" class="btn btn-primary block full-width m-b">Ingresar</button>
