@model Cliente_Seguridad.ServicioSeguridad.Grupo
@{
    ViewBag.Title = "GruposCrear";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm("GruposCrear", "Grupos", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Nombre Grupo (*)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.NombreGrupo, new { @class = "form-control", @placeholder = "Nombre del Grupo" })
                                @Html.ValidationMessageFor(model => model.NombreGrupo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Descripción del Grupo (*)</label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.DescripcionGrupo, htmlAttributes: new { @class = "form-control", @placeholder = "Descripción del Grupo", @rows = "3", @maxlength = "2000" })
                                @Html.ValidationMessageFor(model => model.DescripcionGrupo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary btn-sm "><i class="fa fa-save"></i>&nbsp;Grabar</button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-sm-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

