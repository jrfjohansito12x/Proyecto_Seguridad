@model Cliente_Seguridad.ServicioSeguridad.Usuario
@{
    ViewBag.Title = "UsuarioRegistrar";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm("UsuarioRegistrar", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Usuario (*)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.IdUsuario, new { @class = "form-control", @placeholder = "Usuario" })
                                @Html.ValidationMessageFor(model => model.IdUsuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Nombre (*)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control", @placeholder = "Nombre Usuario" })
                                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Apellido (*)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.ApellidoUsuario, new { @class = "form-control", @placeholder = "Apellido Usuario" })
                                @Html.ValidationMessageFor(model => model.ApellidoUsuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Clave  (*)</label>
                            <div class="col-lg-10">
                                @Html.PasswordFor(model => model.ClaveAcceso, new { @class = "form-control", @placeholder = "Clave" })
                                @Html.ValidationMessageFor(model => model.ClaveAcceso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Email (*)</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Estado del Usuario (*)</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.EstadoUsuario, new SelectList(ViewBag.ListaEstadoUsuario, "Value", "Text"), "- Seleccionar -", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EstadoUsuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary btn-sm "><i class="fa fa-save"></i>&nbsp;Grabar</button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-sm-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
